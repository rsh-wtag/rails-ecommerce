<h1>Edit Cart Item</h1>
<%= form_with(model: @cart_item, local: true, class: 'form-horizontal') do |form| %>
  <div class="form-group row">
    <%= form.label :quantity, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.number_field :quantity, min: 1, value: @cart_item.quantity, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= form.submit 'Update Quantity', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', cart_path(@cart_item.cart.user), class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
