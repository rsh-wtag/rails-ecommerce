<!DOCTYPE html>
<html>
  <head>
    <title>WellShopping</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="content-wrapper">
      <header class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
          <a class="navbar-brand" href="<%= root_path %>">WellShopping</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <%= link_to 'Categories', categories_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Products', products_path, class: 'nav-link' %>
              </li>
              <% if user_signed_in? %>
                <% unless current_user.admin? %>
                  <li class="nav-item">
                    <%= link_to 'Cart', user_cart_path(current_user), class: 'nav-link' %>
                  </li>
                <% end %>
                <li class="nav-item">
                  <%= link_to 'Orders', user_orders_path(current_user), class: 'nav-link' %>
                </li>
                <% if current_user.role == 'admin' %>
                  <li class="nav-item">
                    <%= link_to 'Manage Users', users_path, class: 'nav-link' %>
                  </li>
                <% end %>
              <% else %>
                <% if session[:cart_id] %>
                  <li class="nav-item">
                    <%= link_to 'Cart', cart_path(session[:cart_id]), class: 'nav-link' %>
                  </li>
                <% end %>
              <% end %>
            </ul>
            <form class="d-flex form-inline" action="<%= products_path %>" method="get">
              <input class="form-control me-2" type="search" name="q" placeholder="Search for products" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <ul class="navbar-nav ms-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' %>
                </li>
                <li class="nav-item ms-2">
                  <%= link_to 'Edit profile', edit_user_registration_path, class: 'btn btn-outline-primary' %>
                </li>
              <% else %>
                <li class="nav-item ms-2">
                  <%= link_to 'Login', new_user_session_path, class: 'btn btn-outline-primary' %>
                </li>
                <li class="nav-item ms-2">
                  <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-outline-success' %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </header>
      <main class="container mt-5">
        <% if flash[:notice].present? %>
          <div class="alert alert-success" role="alert">
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert].present? %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>
        <%= yield %>
      </main>
      <footer class="footer bg-light text-center py-3">
        <p>&copy; <%= Time.current.year %> WellShopping. All rights reserved.</p>
      </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%= javascript_importmap_tags %>
  </body>
</html>
