<%= link_to product_path(product), class: 'text-decoration-none text-dark' do %>
  <div class="card h-100">
    <div id="carousel-<%= product.id %>" class="carousel slide" data-bs-interval="false">
      <div class="carousel-inner">
        <% product.images.each_with_index do |image, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <%= image_tag(image, class: "d-block w-100 card-img-top", alt: product.name) %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carousel-<%= product.id %>" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-<%= product.id %>" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </a>
    </div>
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to product.name, product_path(product), class: 'text-decoration-none text-dark' %>
      </h5>
      <p class="card-text"><%= truncate(product.description, length: 100) %></p>
      <p class="card-text"><strong>Price:</strong> <%= number_to_currency(product.price, unit: "", format: "%n BDT") %></p>
      <p class="card-text"><strong>Stock:</strong> <%= product.stock_quantity %></p>
      <p class="card-text"><strong>SKU:</strong> <%= product.SKU %></p>
      <% if current_user&.admin? %>
        <%= button_to product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mt-3' do %>
          <i class="bi bi-trash"></i> Delete
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
