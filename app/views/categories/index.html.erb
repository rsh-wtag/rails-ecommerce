<h1 class="mb-4">Categories</h1>
<div class="container">
  <% if current_user && current_user.admin? %>
    <%= link_to 'New Category', new_category_path, class: 'btn btn-primary mb-3' %>
  <% end %>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td class="text-center">
            <%= link_to 'Show', category, class: 'btn btn-info btn-sm' %>
          </td>
          <% if current_user && current_user.admin? %>
            <td class="text-center">
              <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning btn-sm' %>
            </td>
            <td class="text-center">
              <%= button_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
